    <script>
        $(document).ready(function () {
            var isHidden = false; // Flag to track whether the div is hidden or not

            $(".toggle-btn").click(function () {
                if (isHidden) {

                    $("#layout-menu").animate({
                        left: 0,
                        width: "260px"
                    }, 480);


                    // Slide the div back to the right and show it
                    $(".sidenav").animate({
                        left: 0,
                        width: "21%"
                    }, 800, function () {
                        // Animation complete callback
                        isHidden = false; // Update the flag
                    });



                }
                else {

                    $("#layout-menu").animate({
                        left: -100, // Slide to the left (negative value)
                        width: 0,
                    }, 400);
                    // Slide the div to the left and hide it
                    $(".sidenav").animate({
                        left: -100, // Slide to the left (negative value)
                        width: 0,
                    }, 600, function () {
                        // Animation complete callback
                        isHidden = true; // Update the flag
                    });
                    $(".sidenav").css("opacity", "1");
                }
            });
        });
    </script>

