
@model  Institution

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*UI Form*@
        <div class="card mt-3 mb-3">
            <div class="card-header">
                <h3 class="text-center">Create Institute</h3>
                <hr />
            </div>
            <div class="card-body row">

                <div class="form-group col-md-6 mb-3">
                    <label>Institute Name</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Instid, new { htmlAttributes = new { @class = "form-control d-none" } })
                        @Html.EditorFor(model => model.Instdesc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Instdesc, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />

                <div class="form-group col-md-6 mb-3">
                    <label>Institute Description(Code)</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Instshortdesc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Instshortdesc, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />

                <div class="form-group col-md-6 mb-3">
                    <label class="col-md-3">Country</label>
                    <div class="col-md-12">
                        @Html.DropDownList("Countid", null, "Please Country Name", htmlAttributes: new { @class = "form-control", @id = "country" })
                        @Html.ValidationMessageFor(model => model.Countid, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />

                <div class="form-group col-md-6 mb-3">
                    <label class="col-md-3">State</label>
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.Stateid, new SelectList(""), "Please select State Name", new { @class = "form-control", disabled = "disabled", @id = "state" })
                        @Html.ValidationMessageFor(model => model.Stateid, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />

                <div class="form-group col-md-6 mb-3">
                    <label class="col-md-3">City</label>
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.Cityid, new SelectList(""), "Please select City Name", new { @class = "form-control", disabled = "disabled", @id = "city" })
                        @Html.ValidationMessageFor(model => model.Cityid, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />

                <div class="form-group col-md-6 mt-4">
                    <div class=" col-md-12 d-flex justify-content-end">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>

            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "InstituteList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


